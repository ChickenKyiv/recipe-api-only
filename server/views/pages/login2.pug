    // Page
    link(rel='stylesheet', href='../../assets/examples/css/pages/login-v3.css')

    

  body.page-login-v3.layout-full

    include ../partials/browserupdate

    // Page
    .page.animsition.vertical-align.text-center(data-animsition-in='fade-in', data-animsition-out='fade-out')
