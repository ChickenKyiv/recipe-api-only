extends ../layout

style(type="text/css").
  button{
     background:none;
     border:none; 
     padding:0;
     font: inherit;
     border-bottom:1px solid #000000; 
     cursor: pointer;
  }

block content
  h1 #{title}

  if !content
    p #{content}

  form(action="#{redirectToEmail}", method="post") 
    button(type="submit", value="#{redirectToLinkText}") #{redirectToLinkText} 

    | for new email to complete registration.
